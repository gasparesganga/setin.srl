//= require ../_js/backtotop.js
//= require ../_js/cookie_banner.js


;(function(undefined){
    "use strict";
    
    // Back to top button
    BackToTop.init(document.getElementById("backtotop"), {
        speed           : 500,
        threshold       : 10,
        visibleClass    : "visible"
    });
    
    
    // Cookie Banner
    let cookieBannerElement = document.querySelector("#cookie_banner");
    cookieBanner.init({
        "element"       : cookieBannerElement,
        "removeClass"   : "removed",
    });
    $("#cookie_banner_ok").on("click", function(){
        cookieBanner.remove(cookieBannerElement);
    });
    
    
    // Email
    let elements = document.getElementsByClassName("email_encoded");
    for (let i = 0; i < elements.length; i++) {
        elements[i].innerHTML = "{{ site.email }}";
    }
})();